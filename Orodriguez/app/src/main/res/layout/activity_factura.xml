<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.mati.orodriguez.Factura"
    android:id="@+id/mainLayout">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/iamgeFactura"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pizza"
        android:id="@+id/nombrePizza"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Precio Base:"
        android:id="@+id/precioBase"
        android:layout_below="@+id/nombrePizza"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="32dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Extras:"
        android:id="@+id/extras"
        android:layout_above="@+id/unidadesView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="55dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Unidades:"
        android:id="@+id/unidadesView"
        android:layout_above="@+id/envioView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="38dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Envio:"
        android:id="@+id/envioView"
        android:layout_centerVertical="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Coste Final:"
        android:id="@+id/totalFin"
        android:layout_above="@+id/hora"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="52dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hora del pedido:"
        android:id="@+id/hora"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="93dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/nombreText"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/totalFin" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/extrasText"
        android:layout_alignTop="@+id/extras"
        android:layout_alignLeft="@+id/nombreText" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/unidadesText"
        android:layout_above="@+id/envioView"
        android:layout_toRightOf="@+id/precioBase"
        android:layout_toEndOf="@+id/precioBase" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/envioText"
        android:layout_below="@+id/envioView"
        android:layout_toRightOf="@+id/extras"
        android:layout_toEndOf="@+id/extras" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/costeText"
        android:layout_above="@+id/hora"
        android:layout_alignLeft="@+id/unidadesText"
        android:layout_alignStart="@+id/unidadesText" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/baseText"
        android:layout_above="@+id/extrasText"
        android:layout_toRightOf="@+id/precioBase"
        android:layout_toEndOf="@+id/precioBase" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/horaText"
        android:layout_below="@+id/costeText"
        android:layout_toRightOf="@+id/iamgeFactura"
        android:layout_toEndOf="@+id/iamgeFactura" />


</RelativeLayout>
